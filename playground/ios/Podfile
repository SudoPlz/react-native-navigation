require_relative '../../node_modules/react-native/scripts/react_native_pods'
require_relative '../../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '10.0'

config = use_native_modules!
use_react_native!(:path => "../../node_modules/react-native")

def pods()
  pod 'ReactNativeNavigation', :path => '../../'
  pod 'ReactNativeKeyboardTrackingView', :path => '../../node_modules/react-native-keyboard-tracking-view'
  # Additional Pods which aren't included in the default Podfile
  
  use_native_modules!
end

target 'playground' do
  project 'playground'
  pods()
end

target 'NavigationTests' do
  inherit! :complete
  pods()
  pod 'OCMock'
end

target 'NavigationIOS12Tests' do
  inherit! :complete
  pods()
  pod 'OCMock'
end

target 'SnapshotTests' do
  inherit! :complete
  pods()
  pod 'OCMock'
  pod 'iOSSnapshotTestCase/Core'
end
